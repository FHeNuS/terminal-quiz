{
    "compilerOptions": {
        "module": "commonJs",
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "outDir": "build/js/",
        "sourceMap": true,
        "declaration": true
    },
    "filesGlob": [
        "src/ts/*/**.ts",
        "typings/tsd.d.ts"
    ],
    "files": [
        "src/ts/lib/ChoiceQuestion.ts",
        "src/ts/lib/CombinationQuestion.ts",
        "src/ts/lib/ListQuestion.ts",
        "src/ts/lib/Question.ts",
        "src/ts/lib/Quiz.ts",
        "src/ts/lib/TextBuilder.ts",
        "src/ts/lib/TextQuestion.ts",
        "src/ts/tests/Quiz.tests.ts",
        "src/ts/tests/SmokeTests.ts",
        "typings/tsd.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
